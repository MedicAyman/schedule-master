<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= logo('mx-auto h-10 w-auto') %>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'space-y-6'}) do |f| %>
      <div>
        <%= f.label :email, class: 'form-label' %><br />
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: 'form-label' %>
          <div class="text-sm">
            <%= link_to 'Forgot password?', new_user_password_path, class: 'font-semibold text-indigo-600 hover:text-indigo-500' %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600' %>
          <%= f.label :remember_me, class: 'ml-3 block text-sm leading-6 text-gray-900' %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in", class: 'flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
      </div>

    <% end %>
    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to 'Start a 7 days free trial', new_user_registration_path, class: 'font-semibold leading-6 text-indigo-600 hover:text-indigo-500' %>
    </p>
  </div>
</div>
